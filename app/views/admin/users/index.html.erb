
<h1>Listing Admin Users</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th>User Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <td><%= admin_user.email %></td>
        <td><%= admin_user.user_type %></td>
        <td><%= link_to 'Show', admin_user_path(id: admin_user.id) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(id: admin_user.id) %></td>
        <td><%= link_to 'Destroy', admin_user_path(id: admin_user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path %>
